
<% include ../layout/header%>
     <section id="portfolio">
        <div class="container">
            <h1 class="bd-title mb-5" id="content">Cập nhật Proxy</h1>
            
                <div class="form-row">
                    <div class="form-group col-md-6 col-sm-9">
                        <label for="inputEmail4">Proxy</label>
                        <input type="text" class="form-control" id="ip" name= "ip" placeholder="Địa chỉ IP">
                    </div>
                    <div class="form-group col-md-2 col-sm-3">
                        <label for="inputPassword4">Cổng</label>
                        <input type="text" class="form-control" id="port" name= "port" placeholder="Cổng">
                    </div>
                    <div class="form-group col-md-2 col-sm-6">
                        <label for="inputPassword4">Tên</label>
                        <input type="text" class="form-control" id="user" name= "user" placeholder="Tên">
                    </div>
                    <div class="form-group col-md-2 col-sm-6">
                        <label for="inputPassword4">Mật khẩu</label>
                        <input type="text" class="form-control" id="pass" name= "pass" placeholder="mật khẩu">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary" onClick = "addProxy()">Thêm Proxy</button>
            
            <ul class="list-group mt-5">
                <div class="overflow-auto">
                <% if(proxies != null) { %>
                <% proxies.forEach(function(item) { %>
                    <li class="list-group-item justify-content-end">
                            <input type="hidden" name="id" id='id' value = " <%= item._id %> ">
                            <span class = "mr-4"><%= item.ip %></span>
                            <span class = "mr-4"><%= item.port %></span>
                            <span class = "mr-4"><%= item.user %></span>
                            <span class = "mr-4"><%= item.pass %></span>
                            <button type="button" class="btn btn-outline-danger" onClick = "del(' <%= item._id %> ')">Xóa</button>
                            <% if(item.status == "active") { %>
                                <button type="button" class="btn btn-primary">Hoạt động</button>
                            <% } %>
                            <% if(item.status == "warning") { %>
                                <button type="button" class="btn btn-warning">Cảnh Báo</button>
                            <% } %>
                            <% if(item.status == "inActive") { %>
                                <button type="button" class="btn btn-danger">Vô Hiệu</button>
                            <% } %>      
                    </li>
                <% }); %>
                <% }; %>
                </div>
            </ul>
        </div>
    </section>
    <% include ../layout/footer%>
    <script>
        var del = function(id) {
            id = id.trim()          
            const url = `/proxies/${id}`;
            axios.delete(url)
                .then(function (response) {
                    location.reload()
                })
                .catch(function (error) {
                    location.reload()
                    console.log(error);
                });
                // location.reload();
        };
        var addProxy = function() {            
            var url = `/proxies`;
            var ip = $("#ip").val();
            var port = $("#port").val();
            var user = $("#user").val();
            var pass = $("#pass").val();
            axios.post(url, {
                ip: ip,
                port: port,
                user: user,
                pass: pass
            })
                .then(function (response) {
                    location.reload()
                })
                .catch(function (error) {
                    location.reload()
                    console.log(error);
                });
                // location.reload();
        };
        

        
    </script>
  </body>
</html>
